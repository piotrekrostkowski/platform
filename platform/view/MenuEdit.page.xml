<?xml version="1.0" encoding="UTF-8"?>


<page xmlns="http://jboss.com/products/seam/pages"

      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"

      xsi:schemaLocation="http://jboss.com/products/seam/pages http://jboss.com/products/seam/pages-2.1.xsd"

      no-conversation-view-id="/MenuList.xhtml"

      login-required="true">

   
   <begin-conversation join="true" flush-mode="MANUAL"/>
   
   <action execute="#{menuHome.wire}"/>
   
   <param name="menuFrom"/>
   <param name="menuId" value="#{menuHome.menuId}"/>


   <navigation from-action="#{menuHome.persist}">
       <rule if-outcome="persisted">
          <end-conversation/>
          <redirect view-id="/Menu.xhtml"/>
       </rule>
   </navigation>
   
   <navigation from-action="#{menuHome.update}">
       <rule if-outcome="updated">
          <end-conversation/>
          <redirect view-id="/Menu.xhtml"/>
       </rule>
   </navigation>
   
   <navigation from-action="#{menuHome.remove}">
       <rule if-outcome="removed">
          <end-conversation/>
          <redirect view-id="/MenuList.xhtml"/>
       </rule>
   </navigation>
   
</page>
